		<script> 
		function tekan(mazda) { 
		  var i; 
		  var x = document.getElementsByClassName("mazda"); 
		  for (i = 0; i < x.length; i++) { 
			x[i].style.display = "none";   
		  } 
		  document.getElementById(mazda).style.display = "block";   
		} 
		</script> 
		
